{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
  form {
  max-width: 400px;
  margin: 0 auto;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 8px;
  background-color: #f8f8f8;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

/* Estilos para las etiquetas y campos de entrada */
form label {
  display: block;
  font-weight: bold;
  margin-bottom: 8px;
  color: #333;
}

form input {
  width: 100%;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 4px;
  box-sizing: border-box;
  font-size: 16px;
}

/* Estilos para el botón de enviar */
form button {
  background-color: #4caf50;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 18px;
}

form button:hover {
  background-color: #45a049;
}

/* Estilos para el enlace de login */
a {
  display: block;
  text-align: center;
  margin-top: 15px;
  text-decoration: none;
  color: #333;
  font-weight: bold;
  border-radius:10px;
  padding:10px;
  background-color: #B9E3AE;
}

a:hover {
  color: #4caf50;
}
</style>

<h1 style="text-align:center;">Bienvenido al registro de usuarios</h1>
{{ form_start(registro) }}

    {{ form_row(registro.nombre) }}
    {{ form_errors(registro.nombre) }}

    {{ form_row(registro.email) }}
    {{ form_errors(registro.email) }}

    {{ form_row(registro.password) }}
    {{ form_errors(registro.password) }}

    {{ form_row(registro.Registrar) }}
    <a href="{{path('login')}}">¿Ya tienes cuenta? inicia sesion</a>
{{ form_end(registro) }}
{% endblock %}
